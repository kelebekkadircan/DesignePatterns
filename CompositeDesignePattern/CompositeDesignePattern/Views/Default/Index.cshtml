@{
    Layout = null;
    var value = ViewBag.Composite as ProductComposite;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa; /* Açık gri arka plan */
        color: #212529; /* Siyah metin rengi */
    }

    .dropdown-menu {
        background-color: #ffffff; /* Beyaz arka plan */
        border: 1px solid #ccc; /* Gri sınır */
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge efekti */
        transition: all 0.3s ease-in-out;
        max-height: 300px; /* Dropdown menüsünün maksimum yüksekliği */
        overflow-y: auto; /* Taşma durumunda kaydırma çubuğu */
    }

    .dropdown-item {
        color: #212529; /* Siyah metin rengi */
        padding: 10px 20px;
        transition: background-color 0.3s ease-in-out;
    }

        .dropdown-item:hover {
            background-color: #e9ecef; /* Hover'da açık gri */
        }

    .dropdown-toggle {
        background-color: #333333; /* Koyu gri buton */
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 5px;
        transition: background-color 0.3s ease-in-out;
        width: 100%;
        text-align: left;
    }

        .dropdown-toggle:hover {
            background-color: #555555; /* Daha açık gri hover efekti */
        }

    .card-header {
        background-color: #333333; /* Koyu gri başlık */
        color: #ffffff; /* Beyaz yazı */
        padding: 15px;
        border-radius: 5px;
        text-align: center;
        font-size: 18px;
    }

    .card-body {
        padding: 20px;
        background-color: #ffffff; /* Beyaz arka plan */
        border-radius: 5px;
        border: 1px solid #ccc; /* Gri sınır */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge efekti */
    }

    .container {
        margin-top: 50px;
    }
</style>

<div class="container">
    <br />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Toplam Ürün Sayısı: @value.TotalCount()
                </div>
                <div class="card-body">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            Ürün Listesi
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @foreach (var item in value.Components)
                            {
                                <li>
                                    <a class="dropdown-item" href="#">
                                        @Html.Raw(item.Display())
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
